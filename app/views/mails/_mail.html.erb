<tr>
  <td> <%= link_to h(mail.title),mail_path(mail)%> </td>
  <td><%= h  mail.from  %> </td>
  <td><%=
    a=(Time.now-mail.created_at).to_i
    if a<1.minutes.seconds
      "#{a}秒前"
    elsif a<1.hour.seconds
      "#{a/1.minutes}分钟前"
    elsif a<1.day.seconds
      "#{a/1.hour.seconds}小时前"
    else
      "#{a/1.day.seconds}天前"
    end %>  </td>
  <td><%=link_to "删除",mail_path(mail),:method => :delete %> </td>
</tr>